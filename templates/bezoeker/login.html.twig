{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css')}}">
{% endblock %}
{% block body %}
    <div class="container justify-content-center">
        <form method="post" class="form2">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div>
                    Je bent in gelogd als {{ app.user.username }}, <a href="{{ path('app_logout') }}">uitloggen</a>
                </div>
            {% endif %}

            <h1 class="">Inloggen</h1>
            <table>
                <tr>
                    <td>Gebruikersnaam</td>
                    <td><input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="tekst"
                               required
                               autofocus></td>
                </tr>
                <tr>
                    <td>Wachtwoord</td>
                    <td><input type="password" name="password" id="inputPassword" class="tekst" required></td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <button class="" type="submit">Login</button>
                        <a class="" href="/register">
                            <button type="button">registreren</button>
                        </a>
                    </td>
                </tr>
            </table>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
        </form>
    </div>

{% endblock %}
